<%= form_with(scope: :session, url: login_path, class: "form-signin", local: true) do |f| %>
  <%= f.label :username, class: "sr-only" %>
  <%= f.text_field :username, class: "form-control", placeholder: "Enter your user name" %>
  <%= f.label :password, class: "sr-only" %>
  <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
  <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
<% end %>